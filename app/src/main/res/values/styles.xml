    <style name="home_shadow_style">
        <item name="cornerRadius">8dp</item>
        <item name="shadowRadius">18dp</item>
        <item name="shadowMarginTop">1dp</item>
        <item name="shadowMarginLeft">1dp</item>
        <item name="shadowMarginRight">1dp</item>
        <item name="shadowMarginBottom">10dp</item>
        <item name="shadowColor">#1F0D6EFF</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="home_video_item_shadow_style">
        <item name="cornerRadius">8dp</item>
        <item name="shadowRadius">8dp</item>
