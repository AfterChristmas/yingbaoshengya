<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/career_white"
    >

    <RelativeLayout
        android:id="@+id/rl_boy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/career_white">

        <TextView
            android:id="@+id/tv_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:paddingLeft="15dp"
            android:paddingTop="13dp"
            android:paddingBottom="13dp"
            android:text="北京市"
            android:textColor="@color/career_textmain_242424"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/iv_select"
            android:visibility="gone"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:src="@drawable/wygk_yellow_chosed" />
    </RelativeLayout>

    <View
        android:id="@+id/view_bottom_divider"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/career_DDDDDD" />

</LinearLayout>