<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
   >
        <RelativeLayout
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_preview"
                    android:src="@drawable/ic_launcher_background"
                    android:layout_width="130dp"
                    android:layout_height="80dp"
                    android:scaleType="centerCrop"
                     />
                <RelativeLayout
                    android:layout_toRightOf="@+id/iv_preview"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="80dp">
                     <TextView
                         android:layout_alignParentTop="true"
                         android:text="平行线辅助线模型"
                         android:textSize="14sp"
                         android:textColor="@color/career_textmain_242424"
                         android:id="@+id/tv_title"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"/>

                        <RelativeLayout
                            android:layout_alignParentBottom="true"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/tv_progress"
                                    android:text="19%"
                                    android:textSize="12sp"
                                    android:paddingTop="10dp"
                                    android:textColor="@color/career_666666"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                                <TextView
                                    android:layout_toRightOf="@+id/tv_progress"
                                    android:id="@+id/tv_speed"
                                    android:text="/330kb/s"
                                    android:textSize="12sp"
                                    android:paddingTop="10dp"
                                    android:textColor="@color/career_666666"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                                <TextView
                                    android:layout_toLeftOf="@+id/tv_delete"
                                    android:paddingTop="10dp"
                                    android:id="@+id/tv_status"
                                    android:paddingLeft="10dp"
                                    android:text="完成"
                                    android:textSize="12sp"
                                    android:textColor="@color/career_FEA51B"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                                <TextView
                                    android:paddingTop="10dp"
                                    android:id="@+id/tv_delete"
                                    android:paddingLeft="10dp"
                                    android:layout_alignParentRight="true"
                                    android:text="取消"
                                    android:textSize="12sp"
                                    android:textColor="@color/career_FEA51B"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                        </RelativeLayout>
                </RelativeLayout>
        </RelativeLayout>



</RelativeLayout>
