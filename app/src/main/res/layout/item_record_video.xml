<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">

    <com.alorma.timeline.RoundTimelineView
        app:timeline_indicatorSize="0dp"
        app:timeline_lineStyle="dashed"
        android:layout_marginRight="12dp"
        android:id="@+id/time_line"
        app:timeline_lineColor="@color/career_FFAD00"
        app:timeline_type="middle"
        android:layout_width="1dp"
        android:layout_height="match_parent" />

    <com.loopeer.shadow.ShadowView
        style="@style/home_video_item_shadow_style"
        android:id="@+id/sv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/career_white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_classimage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop" />


            <TextView
                android:id="@+id/tv_class_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="6dp"
                android:lines="1"
                android:text="数列大招系列—数列构造"
                android:textColor="@color/career_textmain_242424"
                android:textSize="12sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_marginTop="6dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/tv_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="3dp"
                    android:text="已观看"
                    android:textColor="@color/career_textmain_242424"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:text="12.36%"
                    android:textColor="@color/career_FEA51B"
                    android:textSize="10sp" />

            </RelativeLayout>
        </LinearLayout>
    </com.loopeer.shadow.ShadowView>
</LinearLayout>