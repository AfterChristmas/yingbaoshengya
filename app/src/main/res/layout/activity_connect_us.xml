<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/career_white"
    tools:context=".ui.personal.AboutUsActivity">

    <include
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/title_layout"
        layout="@layout/white_titlebar" />
    <TextView
        android:layout_marginTop="100dp"
        android:id="@+id/tv_company_name"
        app:layout_constraintTop_toBottomOf="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="全国免费客服热线"
        android:textColor="@color/career_textmain_242424"
        android:textSize="12sp" />
    <TextView
        app:layout_constraintTop_toBottomOf="@+id/tv_company_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center"
        android:id="@+id/tv_phone_num"
        android:text="400-12354-2345"
        android:layout_marginTop="10dp"
        android:textColor="@color/career_textmain_242424"
        android:textSize="14sp" />
    <TextView
        android:id="@+id/tv_time_info"
        android:layout_marginTop="80dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_phone_num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="服务时间"
        android:textColor="@color/career_textmain_242424"
        android:textSize="12sp" />
    <TextView
        android:id="@+id/tv_time"
        app:layout_constraintTop_toBottomOf="@+id/tv_time_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center"
        android:text="08:30-12:00  13:00-17:00"
        android:layout_marginTop="10dp"
        android:textColor="@color/career_textmain_242424"
        android:textSize="14sp" />
    <TextView
        app:layout_constraintTop_toBottomOf="@+id/tv_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center"
        android:text="（周一至周日）"
        android:layout_marginTop="10dp"
        android:textColor="@color/career_textmain_242424"
        android:textSize="12sp" />

</androidx.constraintlayout.widget.ConstraintLayout>